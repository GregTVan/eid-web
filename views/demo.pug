html
    head
        title Ver-ID
        meta(name="viewport", content="width=device-width, initial-scale=1")
        script(type="text/javascript", defer, src="https://cdn.jsdelivr.net/gh/justadudewhohacks/face-api.js@0.22.2/dist/face-api.min.js")
        script(type="text/javascript", src="https://cdn.jsdelivr.net/gh/englishextra/qrjs2@0.1.7/js/qrjs2.min.js") 
        script(type="module", src="/js/demo.js", defer)
        style(type="text/css").
            div div.images div {
                display: inline-block;
                position: relative;
                overflow: hidden;
                border-radius: 12px;
                width: 200px;
                height: 250px;
            }
            div div.images div img {
                position: absolute;
                left: 0px;
                top: 0px;
                width: 100%;
                height: 100%;
            }
            div.qr {
                margin-top: 20px;
                display: none;
            }
    body
